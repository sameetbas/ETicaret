@model OrderModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form action="/checkout" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName"  value="" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.LastName"> </label>
                    <input asp-for="@Model.LastName" value="" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.Address"> </label>
                    <textarea  asp-for="@Model.Address" class="form-control"></textarea>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.City"> </label>
                    <input  asp-for="@Model.City" value="" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.Phone"> </label>
                    <input asp-for="@Model.Phone" value="" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.Email"> </label>
                    <input asp-for="@Model.Email" value="" class="form-control" />
                </div>
            </div>

            <hr class="mb-4" />
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class=" custom-control-input" id="save-info" />
                <label class="custom-control-label" for="save-info">Save this İnformation for next time</label>
            </div>
            <hr class="mb-4" />

            <!--Kredi kartı mı eft mi -->
            <div class="d-block my-3">

                <div class="custom-control custom-radio">
                    <input type="radio" id="credit" name="paymentMethod" class="custom-control-input" required="" />
                    <label class="custom-control-label" for="credit"> Credit Cart</label>
                </div>

                <div class="custom-control custom-radio">
                    <input type="radio" id="paypal" name="paymentMethod" class="custom-control-input" required="" />
                    <label class="custom-control-label" for="eft"> EFT</label>
                </div>

            </div>

            <h4 class="mb-3"> Payment </h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CartName"> </label>
                    <input asp-for="@Model.CartName" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CartNumber"> </label>
                    <input asp-for="@Model.CartNumber" value="" class="form-control" />
                </div>
            </div>


            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationMonth"> </label>
                    <input  asp-for="@Model.ExpirationMonth" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationYear"> </label>
                    <input asp-for="@Model.ExpirationYear"  value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Cvv"> </label>
                    <input asp-for="@Model.Cvv" value="" class="form-control" />
                </div>
            </div>

            <hr class="mb-4" />
            <button type="submit" class="btn btn-primary btn-lg btn-block"> Compaleted Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">
        <h4 class="mb-3">
            <span class="text-muted"> Your Cart</span>
        </h4>
        <ul class="list-group mb-3">

            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0"> @item.Name 
                        <small>x @item.Quantity</small>
                        </h6>
                    </div>
                    <span class="text-muted">@item.Price ₺</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Total (₺) </span>
                <strong> @Model.CartModel.TotalPrice() ₺</strong>
            </li>
        </ul>
    </div>
</div>